<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

    <%= f.fields_for :addresses do |g| %>

       <div class="field">
         <%= g.label :nickname %>
         <%= g.text_field :nickname %>
       </div>

       <div class="field">
         <%= g.label :address %>
         <%= g.text_field :address %>
       </div>

       <div class="field">
         <%= g.label :city %>
         <%= g.text_field :city %>
       </div>

       <div class="field">
         <%= g.label :state %>
         <%= g.text_field :state %>
       </div>

       <div class="field">
         <%= g.label :zip %>
         <%= g.text_field :zip %>
       </div>

    <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
